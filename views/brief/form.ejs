<!-- views/brief/form -->

<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
</head>

<body>
<div class="maincontent">
    <header>
        <% include ../partials/header %>
    </header>

    <main>
        <div>
            <h1>Creating a new brief</h1>
            <p>This is where you can create a new brief for a project</p>
            <form method="post" action="/brief/create" class="form-horizontal">
            <div class="form-group">
                <div class="col-sm-10">
                    <label for='title'>Title:</label> 
                    <input class='form-control' type='text' name='title'>
                    <label for='description'>Description:</label>
                    <input class='form-control' type='text' name='description'>
                    <label for='height'>Height:</label>
                    <input class='form-control' type='text' name='height'>
                    <label for='postcode'>Postcode:</label>
                    <input class='form-control' type='text' name='postcode'>
                    
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <p>
                        <button type="submit" name="submit" id="submit" class="btn btn-primary">Create Brief</button>
                    </p>
                </div>
            </div>
            </form>
        </div>
    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>
</div>
</body>

</html>