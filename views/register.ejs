<!-- views/register -->

<!DOCTYPE html>
<html lang="en">

<head>
    <% include ./partials/head %>
</head>

<body>

    <div class="maincontent">
    <header>
        <% include ./partials/header %>
    </header>

    <main>
        <div>
            <img src="/images/SIGN_UP_rev1.png" height="130">
            <p>You can create a user account here: </p>
            <form method="post" action="/user/register" class="form-horizontal"  oninput='password2.setCustomValidity(password2.value != password.value ? "Passwords do not match." : "")'>
                <div class="form-group">
                    <div class="col-sm-10">
                        <label for='username'>email:</label>
                        <input class='form-control' type='email' name='username' placeholder="email address" required="required">
                        <br>
                        <label for='password1'>password:</label>
                        <input class='form-control' id='password1' type='password' name='password' required="required">
                        <br>
                        <label for='password2'>confirm password:</label>
                        <input class='form-control' id='password2' type='password' name='password2'>
                        <br>
                        <label for='postcode'>Postcode:</label>
                        <input class='form-control' id='postcode' type='text' name='postcode' placeholder='First half of postcode' required='required'>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <label class="col-lg-3 col-form-label form-control-label">Would you like to get involved as either an artist or a resident?</label>
                    </div>
                    <div class="col-sm-offset-2 col-sm-10">
                        <label onclick="toggleDiv('resident')">Resident</label>
                        <div id="resident">
                            All about the resident
                        </div>
                    </div>
                    <div class="col-sm-offset-2 col-sm-10">
                        <label onclick="toggleDiv('artist')">Artist</label>
                        <div id="artist">
                            All about the artist
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <p>
                            <button type="submit" name="submit" id="submit" class="btn btn-primary">Create User</button>
                        </p>
                    </div>
                </div>
            </form>
        </div>
    </main>

    <footer>
        <% include ./partials/footer %>
    </footer>
</div>
</body>

</html>